NODE_ENV=test
PORT=3001
API_PREFIX=api/v1

# Base de datos (Docker test)
DATABASE_URL=postgresql://postgres:testpassword@localhost:5433/trabix_test?schema=public

# Redis (Docker test)
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_URL=redis://127.0.0.1:6380
REDIS_PASSWORD=
