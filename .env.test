# ===========================================
# TRABIX Backend - Variables de Entorno (TEST)
# ===========================================

# Aplicaci√≥n
NODE_ENV=test
PORT=3001
API_PREFIX=api/v1

# Base de datos (usa base de datos separada para tests)
DATABASE_URL=postgresql://trabix_user:trabix_password@localhost:5432/trabix_test_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=trabix_redis_password
REDIS_URL=redis://:trabix_redis_password@localhost:6379

# Queue (Bull)
BULL_REDIS_URL=redis://:trabix_redis_password@localhost:6379

# JWT
JWT_SECRET=test-secret-key-for-testing-purposes-only-32chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=test-refresh-secret-for-testing-only-32chars
JWT_REFRESH_EXPIRATION=7d

# Seguridad
BCRYPT_ROUNDS=4
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000
CORS_ORIGIN=http://localhost:3001

# Negocio
COSTO_PERCIBIDO_TRABIX=2400
APORTE_FONDO_POR_TRABIX=200
PRECIO_UNIDAD_LICOR=8000
PRECIO_PROMO_LICOR=12000
PRECIO_UNIDAD_SIN_LICOR=7000

# Precios al mayor
PRECIO_MAYOR_20_LICOR=4900
PRECIO_MAYOR_50_LICOR=4700
PRECIO_MAYOR_100_LICOR=4500
PRECIO_MAYOR_20_SIN_LICOR=4800
PRECIO_MAYOR_50_SIN_LICOR=4500
PRECIO_MAYOR_100_SIN_LICOR=4200

# Equipamiento
MENSUALIDAD_CON_DEPOSITO=9990
MENSUALIDAD_SIN_DEPOSITO=19990
DEPOSITO_EQUIPAMIENTO=49990
COSTO_DANO_NEVERA=30000
COSTO_DANO_PIJAMA=60000

# Porcentajes
PORCENTAJE_VENDEDOR_60_40=60
PORCENTAJE_ADMIN_60_40=40
PORCENTAJE_VENDEDOR_50_50=50
PORCENTAJE_INVERSION=50
LIMITE_REGALOS=8
TRIGGER_CUADRE_T2=10
TRIGGER_CUADRE_T3=20
TRIGGER_CUADRE_T1_2TANDAS=10
TRIGGER_CUADRE_T2_2TANDAS=20

# Tiempos
TIEMPO_AUTO_TRANSITO_HORAS=2

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_ENABLED=true

# Outbox Processor
OUTBOX_POLL_INTERVAL=5000
OUTBOX_MAX_RETRIES=3
